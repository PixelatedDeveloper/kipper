<header>

<nav class="navbar navbar-expand-lg navbar-light">
  <div class="container-fluid">
    <div class="navbar-brand">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
      <a href="{{@site.url}}" class="header-url">{{#if @site.logo}}<img src="{{@site.logo}}" alt="blog logo" class="head-logo hvr-rotate" />{{/if}}
      {{@site.title}}
      </a>
  </div>
  <div class="collapse navbar-collapse d-flex justify-content-end" id="navbarNav">
    <ul class="navbar-nav">

                <!-- Loop through the navigation items -->
        {{#foreach navigation}}
        <li class="nav-item{{#if current}} active{{/if}}">
            <a href="{{url absolute="true"}}" class="nav-link">{{label}}</a>
        </li>
        {{/foreach}}
        {{#if @labs.members}}
        <li class="nav-item">
          {{#if @member}}
          <a class="nav-link" href="javascript:" data-members-signout>{{t "Sign-out"}}</a>
          {{else}}
          <a class="nav-link" href="{{@site.url}}/#/portal/signin">{{t "Sign-in"}}</a>
          {{/if}}
        </li>
        {{/if}}
        
        <!-- End the loop -->
    </ul>
  </div>
  </div>
</nav>
</header>
