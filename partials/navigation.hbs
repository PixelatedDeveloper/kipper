<header>

<nav class="navbar navbar-expand-lg navbar-light">
  <div class="container-fluid">
    <div class="navbar-brand">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
      <a href="{{@site.url}}" class="header-url">{{#if @site.logo}}<img src="{{@site.logo}}" alt="blog logo" class="head-logo hvr-rotate" />{{/if}}
      {{@site.title}}
      </a>
  </div>
  <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
    <ul class="navbar-nav">

{{#if @site.secondary_navigation}}
        <!-- Loop through the navigation items -->
        {{#foreach navigation}}
        <li class="nav-item{{#if current}} active{{/if}}">
            <a href="{{url absolute="true"}}" class="nav-link">{{label}}</a>
        </li>
        {{/foreach}}

        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            {{t "More"}}
          </a>
          <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            {{#if @labs.members}}
              {{#if @member}}
              <a class="nav-link dropdown-item" href="{{@site.url}}/#/portal/account">{{t "My Account"}}</a>
              <a class="nav-link dropdown-item" href="javascript:" data-members-signout>{{t "Sign-out"}}</a>
              {{else}}
              <a class="nav-link dropdown-item" href="{{@site.url}}/#/portal/signin">{{t "Sign-in"}}</a>
              {{/if}}
              <div class="dropdown-divider"></div>
            {{/if}}
            {{#foreach @site.secondary_navigation }}
              <a class="nav-link dropdown-item" href="{{url absolute="true"}}">{{label}}</a>
            {{/foreach}}
          </div>
        </li>

{{else}}
        <!-- Loop through the navigation items -->
        {{#foreach navigation}}
        <li class="nav-item{{#if current}} active{{/if}}">
            <a href="{{url absolute="true"}}" class="nav-link">{{label}}</a>
        </li>
        {{/foreach}}

{{/if}}


 
        <!-- End the loop -->
    </ul>
  </div>
  </div>
</nav>
</header>
