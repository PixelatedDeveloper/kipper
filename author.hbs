{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

  {{#author}}
      <div class="tag_head_wrap">
        <div class="tag_heading text-center">
          
          <div class="author_wrap">
          <img src="{{#if profile_image}}{{img_url profile_image}}{{else}}{{asset "images/fallback-user.jpg"}}{{/if}}" class="avatar-page avatar-page-author center-align" title="Image of {{name}}" alt="Image of {{name}}" />
          <p class="posttitle posttitle-author">{{name}}</p>
            <div class="socialfooter-top text-center socialfooter-top-author">
            {{#if facebook}}<a href="{{facebook_url}}" target="blank" rel="noopener noreferrer"><i class="fab fa-facebook fa-facebook-author"></i>Facebook</a>{{/if}}
            {{#if twitter}}<a href="{{twitter_url}}" target="blank" rel="noopener noreferrer"><i class="fab fa-twitter fa-twitter-author"></i>Twitter</a>{{/if}}
            </div>
            </div>
        </div>

        </div>
  {{/author}}


<div class="main-content {{#if @site.cover_image}}main-content-head{{/if}}">
    {{> 'post/basic'}}
    {{#if pagination}}
        {{pagination}}
    {{/if}}
</div>