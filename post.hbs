{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
  <div class="row h-100 page-row">
  {{#post}}
      <div class="col col-xs-12 col-md-12 col-lg-12 main-content post-access-{{visibility}}">
      <article>
         <img
            src="{{#if feature_image}}{{img_url feature_image}}{{else}}{{asset "images/fallback-image.jpg"}}{{/if}}"
            class="top-image"
            alt="{{title}}"
            title="{{title}}"
            loading="lazy"
          />
        <div class="post-head">
              <h1 class="top-title text-center">{{title}}</h1>
              <div class="post-subitems text-center">
                <i class="fas fa-clock"></i><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
                <i class="fas fa-book"></i>{{reading_time seconds=(t "< 1 min read") minute=(t "1 min read") minutes=(t "% min read")}}
              </div>
        </div>
      <hr class="fancy-hr" />
      <div class="post-content">
          {{#if access}}
            <p>Thanks for being a member...</p>
            {{content}}

            <div class="cat-links">
                {{#if tags}}
                  <div class="tagslist">
                    {{#foreach tags}}
                      <a href="{{@site.url}}/tag/{{name}}" class="hvr-grow">#{{name}}</a>
                    {{/foreach}}
                  </div>
                {{/if}}<!-- end tags if -->
            </div><!-- end cat links -->
            <hr class="fancy-hr" />
              {{> 'post/author-section'}}

          {{else}}
            <p>You need to become a member in order to read this post... </p>
          {{/if}}
      </div>
      </article>
    </div>
{{/post}}
</div>
