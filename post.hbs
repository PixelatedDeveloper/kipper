{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}
  <div class="row h-100 page-row">
  {{#post}}
      <div class="col col-xs-12 col-md-12 col-lg-12 main-content post-access-{{visibility}}">
      <article>
         <img
            src="{{#if feature_image}}{{img_url feature_image}}{{else}}{{asset "images/fallback-image.jpg"}}{{/if}}"
            class="top-image"
            alt="{{title}}"
            title="{{title}}"
            loading="lazy"
          />
        <div class="post-head">
              <h1 class="top-title text-center">{{title}}</h1>
              <div class="post-subitems text-center">
                <i class="fas fa-clock"></i><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time>
                <i class="fas fa-book"></i>{{reading_time seconds=(t "< 1 min read") minute=(t "1 min read") minutes=(t "% min read")}}
              </div>
        </div>
      <div class="post-content">
          {{#if access}}
              <hr class="fancy-hr" />
              {{content}}

              {{#if @member.paid}}
                <p class="subscription-text">{{t "Awesome to see you are a paying member ðŸŽ‰"}}</p>
              {{else if @member}}
                <p class="subscription-text">{{t "Thank you for being a member ðŸ™Œ"}}</p>
              {{else}}
                <p class="subscription-text">{{t "Sign-up to view Premium content."}}</p>
              {{/if}}
              
              {{#if tags}}
                <div class="tagslist">
                  {{#foreach tags}}
                    <a href="{{@site.url}}/tag/{{name}}" class="hvr-grow">#{{name}}</a>
                  {{/foreach}}
                </div>
              {{/if}}<!-- end tags if -->


                {{> 'post/author-section'}}
          {{/if}}
      </div>
      </article>
    </div>
{{/post}}
</div>
